				<TOGGLE_OUTPUT KEY="01" NAME="Garage Door LED"  DISPLAY_NAME="GARAGE_DOOR_LED" />
				<TOGGLE_OUTPUT KEY="02" NAME="Entry LED"        DISPLAY_NAME="ENTRY_LED" />

			<IP ACTIVE="N" IP_ADDRESS="192.168.0.210" PORT="1001"/>
		</CONNECTION>
		<CATALOGUE NAME="DOOR_IDS">
			<ITEM CODE="31" VALUE="Main door"/>
		</CATALOGUE>
		<!-- user codes are 1 - 16 , hex -->
		<CATALOGUE NAME="COMFORT_USERS">
			<ITEM CODE="01" VALUE="Colin"/>
		</CATALOGUE>
		<CATALOGUE NAME="ALERT_ZONES">

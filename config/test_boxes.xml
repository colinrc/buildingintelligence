			<ITEM NAME="ANALOGUE_POLL_INTERVAL" VALUE="30"/>
			<ITEM NAME="CBUS_APPLICATION" VALUE="38"/>
			<ITEM NAME="CBUS_UCM" VALUE="12"/>

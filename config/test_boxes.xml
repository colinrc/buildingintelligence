			<ITEM CODE="02" VALUE="Entry PIR triggered"/>
			<ITEM CODE="03" VALUE="Garage PIR triggered"/>
			<ITEM CODE="04" VALUE="Lounge PIR triggered"/>
			<ITEM CODE="05" VALUE="Smoke detector triggered"/>

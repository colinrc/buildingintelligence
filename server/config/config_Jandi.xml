<CONFIG lastUpdated="2004-03-18" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="eLife_Config_Schema.xsd">
        <DESC>Demonstration configuration for a Jandi pool controller</DESC>
         <!-- ______________________________________  Jandi DEFS  ____________________  -->
        <DEVICE ACTIVE="N" DEVICE_TYPE="JANDI" DESCRIPTION="Jandi Pool controller">
                <CONNECTION>
                        <SERIAL ACTIVE="N" PORT="/dev/tty.USB Serial" SUPPORTS_CD="N" BAUD="9600" STOP_BITS="1" PARITY="N" DATA_BITS="8" FLOW="RTSCTS"/>
                        <IP ACTIVE="Y" IP_ADDRESS="127.0.0.1" PORT="5001"/>
                        <IP ACTIVE="N" IP_ADDRESS="192.168.1.70" PORT="4999"/>
                </CONNECTION>
                
                
                <PARAMETERS>
                	<ITEM NAME="UNITS"  VALUE="C" />  <!-- C or F for temperature controls -->
                </PARAMETERS>
 
                <JANDI>
                      <OUTPUT KEY="PoolPump" ACTIVE="y" NAME="Front Pool Pump" DISPLAY_NAME="FRONT_POOL_PUMP"/>
                      <OUTPUT KEY="PoolCleaner" ACTIVE="y" NAME="Pool cleaner"  DISPLAY_NAME="POOLS_CLEANER"/>               
                      <OUTPUT KEY="SpaPump" ACTIVE="Y" DISPLAY_NAME="SPA" NAME="Spa" />
 
                    <SENSOR KEY="4" NAME="Air temperature" DISPLAY_NAME="AIR" TYPE="AIR" />
                    
                     <SENSOR KEY="5" NAME="Solar temperature and heater" DISPLAY_NAME="SOLAR" TYPE="SOLAR" />						
 
					  <!-- The key numbers here are magic, they are purely used to tie Jandi functions to particular display names -->
						 
                </JANDI>
        </DEVICE>
        
 
</CONFIG>

               <!-- _____________________________ Trigger Sequences _____________________________-->
        <TRIGGERS>
                
                <TRIGGER NAME="ENSUITE_LIGHT" >
	                <EVENT>
	                		<TEST>
	                			<EQ KEY="COMMAND" VALUE="on" />
	                			<GE KEY="EXTRA" VALUE="50" />	                			
	                		</TEST>
	                		<ACTION_SEQ>
	                			<CONTROL COMMAND="on" EXTRA="%EXTRA%" KEY="GARAGE_LIGHT" />
	                			<CONTROL COMMAND="on" EXTRA="%EXTRA%" KEY="POOL_LIGHT" />
	                		</ ACTION_SEQ>
	                	</EVENT>
	                	
	                <EVENT>
	                		<TEST>
	                			<EQ KEY="COMMAND" VALUE="on" />
	                			<LE KEY="EXTRA" VALUE="49" />	                			
	                		</TEST>
	                		<ACTION_RET_ORIGINAL TIME="5" > 
	                		<!-- runs the sequence then returns all items mentioned in the sequence to their original 
	                		     value after 5 seconds -->
	                		
	                			<CONTROL COMMAND="on" EXTRA="%EXTRA%" KEY="GARAGE_LIGHT" />
	                			<CONTROL COMMAND="on" EXTRA="%EXTRA%" KEY="POOL_OUTSIDE_LIGHT" />
	                		</ ACTION_SEQ>
	                	</EVENT>
	                	
	                <EVENT>
	                		<TEST>
	                			<EQ KEY="COMMAND" VALUE="off" />
	                		</TEST>
	                		<ACTION_SEQ>
	                			<CONTROL COMMAND="off" EXTRA="0" KEY="GARAGE_LIGHT" />
	                			<CONTROL COMMAND="off" EXTRA="0" KEY="POOL_LIGHT" />
	                		<ACTION_SEQ />
	                	</EVENT>
	             </TRIGGER>
        </TRIGGERS>